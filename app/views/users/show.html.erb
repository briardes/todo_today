<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
